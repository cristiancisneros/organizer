<title>User profile | Flatty - Flat Administration Template</title>


  <body class='contrast-red '>
    
    <div id='wrapper'>
      <div id='main-nav-bg'></div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= devise_error_messages! %>

        <section id='content'>
          <div class='container'>
            <div class='row' id='content-wrapper'>
              <div class='col-xs-12'>
                <div class='row'>
                  <div class='col-sm-12'>
                    <div class='page-header'>
                      <h1 class='pull-left'>
                        <i class='icon-user'></i>
                        <span>User profile</span>
                      </h1>
                      <div class='pull-right'>
                        <ul class='breadcrumb'>
                          <li>
                            <a href='index.html'>
                              <i class='icon-bar-chart'></i>
                            </a>
                          </li>
                          <li class='separator'>
                            <i class='icon-angle-right'></i>
                          </li>
                          <li>Example pages</li>
                          <li class='separator'>
                            <i class='icon-angle-right'></i>
                          </li>
                          <li class='active'>User profile</li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
                <div class='row'>
                  <div class='col-sm-3 col-lg-2'>
                    <div class='box'>
                      <div class='box-content'>
                          <% if @user.avatar.url.present? %>
                            <%= image_tag(@user.avatar_url.to_s, :class => 'img-rounded img-responsive') if @user.avatar? %>
                          <% else %>
                            <img class="img-responsive" src="http://placehold.it/230x230&text=Photo" />
                          <% end %>
                      </div>
                      <div align="center" class='box-content'>
                        <%= f.file_field :avatar, :class => 'img-responsive btn btn-primary start icon-upload icon-white' %>
                        <%= f.hidden_field :avatar_cache %>
                      </div>
                    </div>
                  </div>
                  <div class='col-sm-9 col-lg-10'>
                    <div class='box'>
                      <div class='box-content box-double-padding'>
                        <form class='form' style='margin-bottom: 0;'>
                          <fieldset>
                            <div class='col-sm-4'>
                              <div class='lead'>
                                <i class='icon-github text-contrast'></i>
                                GitHub
                              </div>
                              <small class='text-muted'>Text text text.</small>
                            </div>
                            <div class='col-sm-7 col-sm-offset-1'>
                              <div class='form-group'>
                                <label>Username</label>
                                <input class='form-control' id='username' placeholder='Username' type='text'>
                              </div>
                              <div class='form-group'>
                                <label>E-mail</label>
                                <%= f.email_field :email, autofocus: true, :placeholder => 'Email', class: "form-control" %>
                              </div>
                              <hr class='hr-normal'>
                                <div class='form-group'>
                                  <label>Password</label>
                                  <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-control" %>
                                </div>
                                <div class='form-group'>
                                  <label>Password confirmation</label>
                                 <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation', class: "form-control" %>
                                </div>
                            </div>
                          </fieldset>
                          <hr class='hr-normal'>
                          <fieldset>
                            <div class='col-sm-4'>
                              <div class='lead'>
                                <i class='icon-user text-contrast'></i>
                                Personal info
                              </div>
                              <small class='text-muted'>Text text text.</small>
                            </div>
                            <div class='col-sm-7 col-sm-offset-1'>
                              <div class='form-group'>
                                <label>First Name</label>
                                <%= f.text_field :first, :placeholder => 'First Name', class: "form-control" %>
                              </div>
                              <div class='form-group'>
                                <label>Last Name</label>
                                <%= f.text_field :last, :placeholder => 'Last Name', class: "form-control" %>
                              </div>
                              <hr class='hr-normal'>
                              <div class='form-group'>
                                <label>Bio</label>
                                <%= f.text_field :bio, class: 'autosize form-control' %>
                              </div>
                            </div>
                          </fieldset>
                            <div class='text-right'>
                                 <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
                                 <% end %>
                              <hr class='hr-normal'>
                                 <%= button_to "Delete my account", registration_path(resource_name), class: "btn btn-danger btn-lg",data: { confirm: "Are you sure?" }, method: :delete %>
                            </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
  </body>
